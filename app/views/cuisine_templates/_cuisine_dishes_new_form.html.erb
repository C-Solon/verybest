<form action="/create_dish_from_cuisine" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <textarea id="name" name="name" class="form-control" rows="3"><%= @dish.name %></textarea>
  </div>

  <input type="hidden" name="cuisine_id" value="<%= @cuisine.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create dish
  </button>
</form>
