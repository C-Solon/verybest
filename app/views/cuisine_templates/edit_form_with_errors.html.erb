<!-- Validation failure messages -->
<% if @cuisine.errors.any? %>
  <% @cuisine.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit cuisine #<%= @cuisine.id %>
</h1>

<hr>

<!-- Form cuisine start -->
<form action="/update_cuisine/<%= @cuisine.id %>" method="post">
<!-- Form cuisine end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <textarea id="name" name="name" class="form-control" rows="3"><%= @cuisine.name %></textarea>
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update cuisine
  </button>
</form>

<hr>

<a href="/cuisines">
  Go back
</a>
