<!-- Form venue start -->
<form action="/create_venue_from_neighborhood" method="post">
<!-- Form venue end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <textarea id="name" name="name" class="form-control" rows="3"><%= @venue.name %></textarea>
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for address start -->
  <div class="form-group">
    <label for="address">
      Address
    </label>

    <!-- Input for address start -->
    <input type="text" id="address" name="address" class="form-control" value="<%= @venue.address %>">
    <!-- Input for address end -->
  </div>
  <!-- Label and input for address end -->

  <!-- Label and input for neighborhood_id start -->
  <!-- Input for neighborhood_id start -->
  <input type="hidden" name="neighborhood_id" value="<%= @neighborhood.id %>">
  <!-- Input for neighborhood_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create venue
  </button>
</form>
