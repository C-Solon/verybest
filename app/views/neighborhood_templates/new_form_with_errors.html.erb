<!-- Validation failure messages -->
<% if @neighborhood.present? %>
  <% if @neighborhood.errors.any? %>
    <% @neighborhood.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new neighborhood
</h1>


<hr>

<!-- Form neighborhood start -->
<form action="/create_neighborhood" method="post">
<!-- Form neighborhood end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <textarea id="name" name="name" class="form-control" rows="3"><%= @neighborhood.name %></textarea>
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create neighborhood
  </button>
</form>

<hr>

<a href="/neighborhoods">
  Go back
</a>
